<%- include('header') %>
      <br>
      <br>
      <br>
    <div class="container">
        <h1 class="text-center" style="color: white;">Password Category List</h1>
        <% if(msg != ''){ %>
          <p style="text-align: center;color: red;"><%= msg %></p>
        <% } %>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr style="background-color: black;color: white;">
                        <th>Password Category Name</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                  <% if(records.length>0){ 
                    records.forEach(function(row){
                    %>
                    <tr>
                        <td><%= row.password_category %></td>
                        <td><a class="btn btn-primary btn-sm" href="/passwordCategory/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-sm" href="/passwordCategory/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <% }) } %>
                </tbody>
            </table>
    </div>

    <%- include('footer') %>
