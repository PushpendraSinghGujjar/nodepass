<%- include('header') %>
      <br>
      <br>
      <br>
    <div class="container">
        <h1 class="text-center" style="color: white;">View Password List</h1>
        <% if(success != ''){ %>
          <p style="text-align: center;color: red;"><%= success %></p>
          <% } %>
        <br><br><br>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr style="background-color: black; color: white;">
                        <th>Password Category Name</th>
                        <th>Project Name</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                  <% if(records.length>0){
                    records.forEach(function(row){
                    %>
                    <tr>
                        <td><%= row.password_category %></td>
                        <td><%= row.project_name %></td>
                        <td><button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal<%= row._id %>"><i class="fa fa-eye"></i></button>
                          <a class="btn btn-primary btn-sm" href="/password_detail/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                          <a class="btn btn-danger btn-sm" href="/viewAllPassword/delete/<%= row._id %>" onclick=" return confirm('Your Details Will Be Deleted Permanently. Still Want To Delete')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                      <!-- The Modal -->
  <div class="modal fade" id="myModal<%= row._id %>">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title"><%= row.project_name %></h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <%- row.password_detail %>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>
                    <% })} %>
                </tbody>
            </table>
    </div>

    <%- include('footer') %>
