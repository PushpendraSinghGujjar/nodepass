<%- include('header') %>
    <br>
    <br>
    
    <div class="container">
      <div class="row">
        <div class="col-md-3"></div>
        <div id="signupbox" style="margin-top: 15%;" class="mainbox col-md border border-basic">
        <div class="panel" style="padding: 4%;">
          <h2 class="panel-heading bg-primary text-white" style="padding: 1%;">
            <div class="panel-title">Edit Password Category</div>
          </h2>
          <div class="panel-body">
            <form action="/passwordCategory/edit/" id="EmployeeForm" class="form-horizontal" method="POST" role="form">
                <input type="hidden" name="id" value="<%= id %>">
            <div class="form-group">
              <% if(errors != ''){ %>
                  <p style="text-align: center;color: red;"><%= errors.passwordCategory.msg %></p>
                <% } %>

                <% if(success != ''){ %>
                  <p style="text-align: center;color: green;"><%= success %></p>
                <% } %>

              <label for="passwordCategory" class="col-md-8 control-label">New Category Name</label>
              <div class="col-md-9">
                <input type="text" class="form-control" name="passwordCategory" value="<%= records.password_category %>" placeholder="New Password Category Name">
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-3 col-md-9">
                <input type="submit" name="submit" value="Update" class="btn btn-danger">
              </div>
            </div>
            <p><a href="/passwordCategory">View All Password Category List</a></p>
            </form>
          </div>
        </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>

    <%- include('footer') %>
